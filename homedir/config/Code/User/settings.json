{
    // workbench
    "workbench.colorTheme": "Solarized Dark",
    "workbench.tree.renderIndentGuides": "none",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    // explorer
    "explorer.compactFolders": false,
    "explorer.sortOrder": "type",
    // editor
    "editor.cursorStyle": "block",
    "editor.fontFamily": "'Cascadia Code', 'Victor Mono', 'Cartograph CF', 'Consolas'",
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "editor.lineHeight": 17,
    "editor.lineNumbers": "relative",
    "editor.renderFinalNewline": "on",
    "editor.tabCompletion": "on",
    "editor.rulers": [
        70,
        80,
        110
    ],
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.minimap.scale": 2,
    //"editor.wordWrapColumn": 110,
    "editor.guides.indentation": false,
    // files
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    // markdown
    "markdown.extension.toc.updateOnSave": false,
    // terminal
    "terminal.integrated.fontFamily": "'Cascadia Code PL', 'Victor Mono', 'Cartograph CF', 'Consolas'",
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1,
    // plugins
    "vim.foldfix": true,
    "vim.cursorStylePerMode.insert": "line",
    "vim.cursorStylePerMode.visualline": "block-outline",
    "vim.showMarksInGutter": true,
    "vim.enableNeovim": true,
    "python.languageServer": "Pylance",
    "todohighlight.include": [
        "**/*.txt",
        "**/*.md",
        "**/*.asciidoc",
        "**/*.zsh",
        "**/*.cs",
        "**/*.rs",
        "**/*.ex",
        "**/*.exs"
    ],
    "[json]": {
        "editor.detectIndentation": false,
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2
    },
    "[yaml,yml]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    "[sls]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    "[markdown]": {
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.wordWrap": "off",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    // theme
    "material-icon-theme.folders.color": "#42a5f5",
    "material-icon-theme.folders.associations": {
        "Pipeline": "Azure-Pipelines",
        "Engineering": "Config",
        "Solution": "VSCode",
    },
    "material-icon-theme.files.associations": {
        "CONDUCT.md": "Conduct",
        "CONDUCT.asciidoc": "Conduct",
        "CONTRIBUTE.md": "Contributing",
        "CONTRIBUTE.asciidoc": "Contributing",
        "UNLICENSE.md": "Lock",
        "UNLICENSE.asciidoc": "Lock",
        "WAIVER.md": "Key",
        "WAIVER.asciidoc": "Key",
        "*.sls": "YAML",
    },
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true
    },
    "python.analysis.completeFunctionParens": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "vim.cursorStylePerMode.replace": "underline",
    "vim.cursorStylePerMode.visual": "block-outline",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.visualblock": "block-outline",
    "editor.cursorSmoothCaretAnimation": "on",
    "files.associations": {
        "*.livemd": "markdown"
    },
    "terminal.integrated.defaultProfile.linux": "zsh",
    "markdown-preview-enhanced.liveUpdate": false,
}
